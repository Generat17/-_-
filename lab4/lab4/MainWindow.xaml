<Window x:Class="lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4"
        mc:Ignorable="d"
        Title="Текстовый редактор" Height="450" Width="800"
        MaxHeight="450" MinHeight="450" MaxWidth="800" MinWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="open_file" Content="Открыть файл" Click="OpenFile_Click" FontSize="14" Width="100" Margin="0,0,0,388"/>
            <Button x:Name="read_file" Content="Чтение файла" Click="ReadFile_Click" FontSize="14" Width="100" Margin="0,0,0,388" />
            <TextBlock x:Name="elapsed_time" Text="" Width="100" Margin="0,0,0,388"/>
            <TextBox x:Name="find_field" Width="424" Margin="0,0,0,388"/>
            <Button x:Name="find" Content="Поиск" Width="63" Margin="0,0,0,388" Click="FindWord_Click"/>
        </StackPanel>
        <TextBlock x:Name="path_file" Text="" Width="791" Margin="0,23,0,370" />
        <ListBox x:Name="main_content" Margin="0,44,191,0"/>
        <ListBox x:Name="find_words" Margin="601,44,0,0"/>
    </Grid>
</Window>
